<Window x:Class="FactoryStorage.View.GatherStorage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactoryStorage.View"
        mc:Ignorable="d"
        Title="GatherStorage" Height="250" Width="400"
        WindowStartupLocation="CenterScreen" Closing="GatherStorage_Closing">
    <Grid>
        <ComboBox x:Name="comboBoxChoice"  HorizontalAlignment="Left" Margin="80,93,0,0" VerticalAlignment="Top" Width="120" Height="30" SelectedIndex="0" SelectionChanged="comboBoxChoice_CelectionChanged"/>
        <Label x:Name="labelHeading" Content="Добавяне" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="buttonGather" Content="Добави" HorizontalAlignment="Center" Margin="0,164,0,0" VerticalAlignment="Top" Height="30" Width="80" Click="buttonGather_Click"/>

        <TextBox x:Name="textBoxNumber" HorizontalAlignment="Left" Margin="234,93,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="35" Height="25" TextAlignment="Center"/>
        <Button x:Name="buttonDown" Content="˅" HorizontalAlignment="Left" Margin="239,123,0,0" VerticalAlignment="Top" Width="25" Click="buttonDown_Click"/>
        <Button x:Name="buttonUp" Content="^" HorizontalAlignment="Left" Margin="239,68,0,0" VerticalAlignment="Top" Width="25" Click="buttonUp_Click"/>
        <Label x:Name="labelChoice" Content="Избери" HorizontalAlignment="Left" Margin="114,62,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
