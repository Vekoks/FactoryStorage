<Window x:Class="FactoryStorage.View.CriticalNumber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactoryStorage.View"
        mc:Ignorable="d"
        Title="Критични стойности" Height="315" Width="527"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="labelheading" Content="Критични стойности" HorizontalAlignment="Left" Margin="162,33,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="textBoxMinNumber" HorizontalAlignment="Left" Margin="132,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="62" Height="24"/>
        <Button x:Name="buttonChange" Content="Промени" HorizontalAlignment="Left" Margin="321,150,0,0" VerticalAlignment="Top" Height="29" Width="86" Click="buttonChange_Click"/>
        <Label x:Name="labelMinNumber" Content="Минимален брой елементити" HorizontalAlignment="Left" Margin="62,109,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button x:Name="buttonExit" Content="Назад" HorizontalAlignment="Left" Margin="209,222,0,0" VerticalAlignment="Top" Height="29" Width="86" FontSize="14" Click="buttonExit_Click" />

    </Grid>
</Window>
